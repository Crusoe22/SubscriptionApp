# Register Screen Definition (Optional)
<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: "Register"
            font_size: 32
            size_hint_y: 0.2

        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: 0.6

            Label:
                text: "Email:"
                font_size: 18
                halign: 'right'
                valign: 'middle'
                size_hint_x: 0.4
            TextInput:
                id: email
                multiline: False
                font_size: 18

            Label:
                text: "Password:"
                font_size: 18
                halign: 'right'
                valign: 'middle'
                size_hint_x: 0.4
            TextInput:
                id: reg_password
                password: True
                multiline: False
                font_size: 18

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: 0.2

            Button:
                text: "Register"
                font_size: 18
                background_color: (0, 0.5, 0, 1)  # Dark Green
                on_press: app.change_screen('home_screen')

            Button:
                text: "Cancel"
                font_size: 18
                background_color: (0.5, 0, 0, 1)  # Dark Red
                on_press: app.change_screen('login_screen')