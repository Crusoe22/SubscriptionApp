#: import utils kivy.utils

<HomeScreen>:
    FloatLayout: 
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#c80d04") # Dark red color
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .1
            Image:
                source: "icons/register.png"
            Image:
                source: "icons/Settings.png"
            # Put two Icons here 

        GridLayout:
            rows: 1
            pos_hint: {"top": .9, "x": 0}
            size_hint: 1, .2
            Image:
                source: "icons/MapIcon.png"
            Image:
                source: "icons/home.png"
            Image:
                source: "icons/restaurant.png"
            # Put two weather icons and avatar icons

        Label:
            pos_hint: {"top": .7, "x": 0}
            size_hint: 1, .1
            text: "Restaurant List"
            id: restaurant_list

        GridLayout:
            cols: 1
            pos_hint: {"top": .6, "x": 0}
            size_hint: 1, .4
            # Add your widgets here

        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "x": 0}
            size_hint: 1, .2
            # Add 3 menu buttons here
            ImageButton:
                source: 'icons\logoutButton.png'
                # Add on_press: darker image of logout
                # self.source = button location
                on_release:
                    print("Release add button")
