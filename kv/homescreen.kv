<HomeScreen>:
    FloatLayout: 
        GridLayout:
            rows: 1
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .1
            Image:
                source: "icons/register.png"
            Image:
                source: "icons/Settings.png"
            # Put two Icons here 

        GridLayout:
            rows: 1
            pos_hint: {"top": .9, "x": 0}
            size_hint: 1, .2
            Image:
                source: "icons/MapIcon.png"
            Image:
                source: "icons/home.png"
            Image:
                source: "icons/restaurant.png"
            # Put two weather icons and avatar icons

        Label:
            pos_hint: {"top": .7, "x": 0}
            size_hint: 1, .1
            text: "Restaurant List"
            id: restaurant_list

        GridLayout:
            cols: 1
            pos_hint: {"top": .6, "x": 0}
            size_hint: 1, .4
            # Add your widgets here

        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "x": 0}
            size_hint: 1, .2
            # Add 3 menu buttons here

        Button:
            background_normal: 'icons\menuButtonUnpressed.png'
            background_down: 'icons\menuButtonPressed.png'  # Optional: If you want to use the same image when the button is pressed
            size_hint: (0.21, 0.1)
            pos_hint: {"center_x": 0.5, "y": 0.155}
            on_press: app.change_screen('openscreen_manager')

        Button:
            background_normal: 'icons\logoutButton.png'
            background_down: 'icons\logoutButton.png'  # Optional: If you want to use the same image when the button is pressed
            size_hint: (0.21, 0.2)
            pos_hint: {"center_x": 0.5, "y": 0.002}
            on_press: app.change_screen('openscreen_manager')
